##############################################################################################################
#
# Fortitester IPsec throughput
#
##############################################################################################################

# Prefix for all resources created for this deployment in Microsoft Azure
variable "PREFIX" {
  description = "Added name to each deployed resource"
}

variable "LOCATION" {
  description = "Azure region"
}

variable "USERNAME" {}

variable "PASSWORD" {}

##############################################################################################################
# FortiGate license
##############################################################################################################

variable "FGT_LICENSE_FILE_A" {
  default = ""
}

variable "FGT_LICENSE_FILE_B" {
  default = ""
}

##############################################################################################################
# Minimum terraform version
##############################################################################################################

terraform {
  required_version = ">= 0.12"
}

##############################################################################################################
# Deployment in Microsoft Azure
##############################################################################################################

provider "azurerm" {
  features {}
}

##############################################################################################################
# Static variables - Network
##############################################################################################################

variable "vnet" {
  description = ""
  default = "10.0.0.0/16"
}

variable "subnet" {
  type        = "map"
  description = ""

  default = {
    "1" = "10.0.0.0/24"         # transit
    "2" = "10.0.1.0/24"         # lan-a
    "3" = "10.0.2.0/24"         # lan-b
    "4" = "10.0.3.0/24"         # mgmt
  }
}

variable "subnetmask" {
  type        = "map"
  description = ""

  default = {
    "1" = "24"        # transit
    "2" = "24"        # lan-a
    "3" = "24"        # lan-b
    "4" = "24"        # mgmt
  }
}

variable "gateway_ipaddress" {
  type        = "map"
  description = ""

  default = {
    "1" = "10.0.0.1"      # transit
    "2" = "10.0.1.1"      # lan-a
    "3" = "10.0.2.1"      # lan-b
    "4" = "10.0.3.1"      # mgmt
  }
}

##############################################################################################################
# Static variables - FortiGate A
##############################################################################################################

variable "fgt_a_ipaddress" {
  type        = "map"
  description = ""

  default = {
    "1" = "10.0.0.4"      # transit
    "2" = "10.0.1.4"      # lan-a
  }
}

variable "fgt_a_vmsize" {
  default = "Standard_DS3_v2"
}

##############################################################################################################
# Static variables - FortiGate B
##############################################################################################################

variable "fgt_b_ipaddress" {
  type        = "map"
  description = ""

  default = {
    "1" = "10.0.0.5"      # transit
    "2" = "10.0.2.4"      # lan-b
  }
}

variable "fgt_b_vmsize" {
  default = "Standard_DS3_v2"
}

##############################################################################################################
# Static variables - FortiTester
##############################################################################################################

variable "fts_ipaddress" {
  type        = "map"
  description = ""

  default = {
    "1" = "10.0.1.5"       # lan-a
    "2" = "10.0.2.5"       # lan-b
    "3" = "10.0.3.5"       # mgmt
  }
}

variable "fts_size" {
  default = "Standard_DS5_v2"
}

##############################################################################################################
# Resource Group
##############################################################################################################

resource "azurerm_resource_group" "resourcegroup" {
  name     = "${var.PREFIX}-RG"
  location = "${var.LOCATION}"
}

##############################################################################################################